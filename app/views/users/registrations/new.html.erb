
<div class="form">

  <div class="form__box">
      <h2 class="form__title"> Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
      
        <div class="form__field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__input" %>
          <span>email</span>
          <i></i>
        </div>
      
        <div class="form__field">

          <%= f.password_field :password, autocomplete: "new-password", class: "form__input" %>
          <span>password</span>
          <i></i>
        </div>
      
        <div class="form__field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form__input" %>
          <span>confirm password</span>
          <i></i>
        </div>
          <%= f.submit "Sign up", class: "btn" %>
      <% end %>
  </div>
</div>

<%= render "users/shared/links" %>
