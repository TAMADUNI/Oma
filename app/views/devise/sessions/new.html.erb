<div class="form form--lg">
  <div class="form__box">
    <h2>Log in</h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form__group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "form__input" %>
        <span>Email</span>
        <i></i>
        </div>
    
      <div class="form__group">
        <%= f.password_field :password, class: "form__input", required: true, autocomplete: "current-password" %>
        <span>Password</span>
        <i></i>
        </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="form__group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="actions">
        <%= f.submit "Log in", class:"btn btn--mid" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>
